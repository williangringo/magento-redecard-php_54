<layout version="0.1.0">

    <!-- For the Native Checkout -->
    <checkout_onepage_index>
        <reference name="head">
            <action method="addCss">
                <stylesheet>css/mozg_redecard/style.css</stylesheet>
            </action>
        </reference>
    </checkout_onepage_index>

    <checkout_multishipping_billing>
        <reference name="head">
            <action method="addCss">
                <stylesheet>css/mozg_redecard/style.css</stylesheet>
            </action>
        </reference>
    </checkout_multishipping_billing>

    <!-- For the "Ideasa_IdeCheckoutvm" module -->
    <idecheckoutvm_index_index>
        <reference name="head">
            <action method="addCss">
                <stylesheet>css/mozg_redecard/style.css</stylesheet>
            </action>
        </reference>
    </idecheckoutvm_index_index>

    <!-- For the "Idev_OneStepCheckout, Inovarti_Onestepcheckout" module -->
    <onestepcheckout_index_index>
        <reference name="head">
            <action method="addCss">
                <stylesheet>css/mozg_redecard/style.css</stylesheet>
            </action>
        </reference>
    </onestepcheckout_index_index>

    <!-- For the "IWD_Opc" module -->
    <opc_index_index>
        <reference name="head">
            <action method="addCss">
                <stylesheet>css/mozg_redecard/style.css</stylesheet>
            </action>
        </reference>
    </opc_index_index>

    <!-- For the "DeivisonArthur_OnepageCheckout" module -->
    <onepagecheckout_index_index>
        <reference name="head">
            <action method="addCss">
                <stylesheet>css/mozg_redecard/style.css</stylesheet>
            </action>
        </reference>
    </onepagecheckout_index_index>

    <!-- Checkout Success -->
    <handle_mozg_redecard_checkout>
        <reference name="head">
            <action method="addCss">
                <stylesheet>css/mozg_redecard/style.css</stylesheet>
            </action>
        </reference>
        <!--<reference name="content">
            <block type="mozg_redecard/checkout_onepage_success" name="mozg.redecard.checkout.success" before="mozg.sales.order.info.progress" template="mozg_redecard/checkout/onepage/success.phtml"/>
        </reference>-->
    </handle_mozg_redecard_checkout>

    <checkout_onepage_success>
        <update handle="handle_mozg_redecard_checkout"/>
    </checkout_onepage_success>

    <checkout_multishipping_success>
        <update handle="handle_mozg_redecard_checkout"/>
    </checkout_multishipping_success>

    <onestepcheckout_index_success>
        <update handle="handle_mozg_redecard_checkout"/>
    </onestepcheckout_index_success>

    <!-- / -->

</layout>
